{
  "name": "payflowx",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node ./src/api/server.js",
    "dev": "nodemon --watch src -e js --exec \"node ./src/api/server.js\"",
    "worker": "node ./src/worker/providerWorker.js",
    "dynamo-ui": "DYNAMO_ENDPOINT=http://localhost:4566 dynamodb-admin"
  },
  "keywords": ["payments",
    "serverless",
    "aws",
    "sqs",
    "dynamodb",
    "nodejs",
    "fintech",
    "microservices",
    "orchestrator",
    "distributed-systems",
    "idempotency",
    "retry-logic"
  ],
  "author": "Ankur Singh",
  "description": "Serverless multi-provider payment orchestration engine with AWS SQS, DynamoDB, and pluggable provider adapters.",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.975.0",
    "@aws-sdk/client-sqs": "^3.975.0",
    "@aws-sdk/lib-dynamodb": "^3.975.0",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "node-fetch": "^3.3.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "dynamodb-admin": "^5.1.3",
    "eslint": "^9.39.2",
    "nodemon": "^3.1.11"
  }
}
